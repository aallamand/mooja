<% content_for(:navbar_class, "navbar_home") %>

<div class="banner">
  <div class="row full-width">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="banner-content">
        <h1>Mooja</h1>
        <p>Find last minute deals for surfcamps everywhere</p>
        <div class="search-home-square">

          <div class="search-home-box">
            <%= form_tag '#', method: :get, class: "form-inline form-group search-home-form" do %>
              <%= label_tag 'surfcamp[address]', 'Where', class: "search-home-label" %>
              <%= text_field_tag 'Where', nil, placeholder: 'Hawaii', id: "address", class:"search-home-input" %>
            </div>

            <div class="search-home-box">
              <%= label_tag 'booking[starts_at]', 'When', class: "search-home-label"  %>

              <%= text_field_tag 'booking[starts_at]', nil, placeholder: "03/09/2017", class:"search-home-input datepicker" %>

              <%= text_field_tag 'booking[starts_at]', value = nil,  class:"search-home-input datepicker", placeholder: "03/09/2017" %>
            </div>

            <div class= "search-home-box">
              <%= label_tag 'booking[pax_nb]', 'Surfers', class: "search-home-label" %>
              <%= number_field_tag 'booking[pax_nb]', value = nil, placeholder: "1", class:"search-home-input" %>
            </div>

        </div>

            <div class= "search-home-btn">
                <%= submit_tag "Check at deals", class: "btn btn-primary" %>
            </div>
            <% end %>
        </div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(".datepicker").datepicker({
    format: 'dd/mm/yyyy',
    startDate: '-1d'
    });
  <% end %>
<% end %>

