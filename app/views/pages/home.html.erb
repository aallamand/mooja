          <div class="surfcamp-card-home">
              <%= link_to cl_image_tag(surfcamp.photo.path, width: 510, height: 350, crop: :lfill, fetch_format: :auto), surfcamp_path(surfcamp) %>
              <div class="surfcamp-card-text-disc">
                <p> <%= percentage_of_savings(surfcamp) %>% OFF</p>
              </div>
          </div>
        </div>
      <% end %>
    <% end %>

