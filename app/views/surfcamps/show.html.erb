<div class="banner-show">
  <% @surfcamp.photos.each do |photo| %>
    <%= cl_image_tag photo.path, width: 1500 , height: 450, crop: :lfill, fetch_format: :auto, class: "banner-surfcamp"%>
  <% end %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-7">
      <div class="surfcamp-details">
        <h2> <%= @surfcamp.name %></h2>
        <% unless @surfcamp.rating.blank? %>
        <div class="rating">
          <% @surfcamp.rating.to_i.times do  %>
          <%= image_tag "surf.png" %>
           <!--  <i class="fa fa-star" style="color: black"></i> -->
          <% end %>
          <% (5 - @surfcamp.rating).to_i.times do  %>
           <!--  <i class="fa fa-star-o";"></i> -->
          <% end %>
        </div>
        <% end %>

        <div class="weather-box">
          <div class="banner-bottom-temperature text-center">
            <p>air</p>
            <h5><%= @surfcamp.air_temp.to_i %>Â°C</h5>
          </div>
        <div class="banner-bottom-temperature text-center">
           <p> sea</p>
           <h5><%= @surfcamp.water_temp.to_i %>Â°C</h5>
        </div>
         <div class="banner-bottom-weather text-center">
          <%=  image_tag "sun.png" if @surfcamp.weather_desc == ("Sunny" || "Clear") %>
          <%=  image_tag "rain.png" if @surfcamp.weather_desc == ("Light rain shower" || "Patchy rain possible" || "Light rain") %>
          <%=  image_tag "partly_cloudy.png" if @surfcamp.weather_desc == ("Partly cloudy") %>
          <%=  image_tag "cloudy.png" if @surfcamp.weather_desc == ("Cloudy" || "Overcast") %>
          <p> <%= @surfcamp.weather_desc %></p>
          </div>
        </div>

        <hr>
        <%= image_tag "map-location.png", id:"map-location" %>
        <!-- <i class="fa fa-map-marker" aria-hidden="true"></i> -->
        <%=  @surfcamp.address.capitalize %>
        <hr>
        <h4>Description</h4>
        <p><%= @surfcamp.description %></p>
      </div>
      <hr>
      <h4>ðŸ“Œ Where to find us ?</h4>
      <div id="map-show">
      </div>
       <!--<h4>Reviews</h4>
      <div class="reviews">
        <p> Reviews to be seeded !</p>
      </div> -->

    </div>

    <div class="col-md-4 col-md-offset-1 booking_square">
      <%# unless @pimped_car.promo.blank? %>
      <%= render 'surfcamps/booking_form', errors: @errors, surfcamp: @surfcamp, object: @discount %>
      <%#end %>
    </div>
   </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $('.banner-show').slick({
        dots: false,
        arrows: true,
        infinite: true,
        speed: 500,
        fade: true,
        cssEase: 'linear'
      });
    });
  <% end %>
  <%= javascript_tag do %>
  var handler = Gmaps.build('Google', { markers: { clusterer: undefined } });
  handler.buildMap({ internal: { id: 'map-show' } }, function() {
    markers = handler.addMarkers(
      [
        {
          "lat": <%= @surfcamp.latitude.to_s %>,
          "lng": <%= @surfcamp.longitude.to_s  %>,
          "infowindow": '<%= @surfcamp.name %>'
        }]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    handler.getMap().setZoom(7);
  });
  <% end %>
<% end %>
