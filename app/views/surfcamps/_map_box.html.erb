<% unless surfcamp.photos[0].blank? %>
    <%= cl_image_tag surfcamp.photos[0].path, width: 280, height: 150, crop: :fill, fetch_format: :auto %>
    <%= link_to "", surfcamp_path(surfcamp), class: "surfcamp-infowindow-link" %>
  <div class="banner-bottom-window">
    <div class="banner-bottom-price">
     <%= surfcamp.price_per_night_per_person %>€
    </div>
    <div class="banner-bottom-temperature text-center">
      <p>air</p>
      <h5><%= surfcamp.air_temp.to_i %>°C</h5>
    </div>
    <div class="banner-bottom-temperature text-center">
      <p> sea</p>
      <h5><%= surfcamp.water_temp.to_i %>°C</h5>
    </div>
    <div class="banner-bottom-weather text-center">
      <%=  image_tag "sun.png" if surfcamp.weather_desc == ("Sunny" || "Clear") %>
      <%=  image_tag "rain.png" if surfcamp.weather_desc == ("Light rain shower" || "Patchy rain possible" || "Light rain") %>
      <%=  image_tag "partly_cloudy.png" if surfcamp.weather_desc == ("Partly cloudy") %>
      <%=  image_tag "cloudy.png" if surfcamp.weather_desc == ("Cloudy" || "Overcast") %>
      <p> <%= surfcamp.weather_desc %></p>
    </div>
  </div>
<% end %>
